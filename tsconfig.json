{
  "lib": ["esnext", "esnext.asynciterable"],
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "pretty": true,
    "outDir": "./dist",
    "baseUrl": "./src",
